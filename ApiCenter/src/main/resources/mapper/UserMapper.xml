<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yiwu.changething.sec1.mapper.UserMapper">


    <select id="getUser" resultType="com.yiwu.changething.sec1.bean.User">
        SELECT
            id,
            name,
            password,
            salt,
            phone
        FROM
            yw_user
        WHERE
            name = #{name}
    </select>

    <insert id="insert" parameterType="com.yiwu.changething.sec1.bean.User">
        INSERT INTO yw_user (
            id,
            name,
            password,
            salt,
            phone,
            avatar,
            deleted,
            last_login_time,
            create_time
        ) VALUES (
            #{id},
            #{name},
            #{password},
            #{salt},
            #{phone},
            #{avatar},
            0,
            now(),
            now()
        )
    </insert>
</mapper>